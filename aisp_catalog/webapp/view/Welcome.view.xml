<mvc:View controllerName="com.catalog.aispcatalog.controller.Welcome"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:core="sap.ui.core" core:require="{CurrencyType: 'sap/ui/model/type/Currency'}">

    <Page id="welcomePage" title="{i18n>title}" showHeader="false" enableScrolling="true">
        <content>
            <Panel height="100%">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="{i18n>allProductsTitle}" level="H2" />
                        <ToolbarSpacer />
                        <Text text="Total: {view>/AllProducts/length} products" visible="{= !!${view>/AllProducts/length}}" class="sapUiTinyMarginEnd" />
                    </OverflowToolbar>
                </headerToolbar>

                <!-- Illustrated Message that takes full available height -->
                <VBox height="100%" justifyContent="Center" alignItems="Center" visible="{= !${view>/AllProducts/length}}">
                    <IllustratedMessage id="noDataMessage" title="{i18n>noProductsAvailable}" description="{i18n>noProductsDescription}" illustrationType="sapIllus-NoData" illustrationSize="Auto" />
                </VBox>

                <!-- Products Grid -->
                <!-- Products Grid -->
                <f:GridList id="productGrid" items="{view>/AllProducts}" mode="None" width="100%" visible="{= !!${view>/AllProducts/length}}" class="sapUiSmallMarginTop">
                    <f:customLayout>
                        <grid:GridBoxLayout boxMinWidth="18rem"  />
                    </f:customLayout>

                    <f:GridListItem type="Active" press="onSelectProduct">
                        <f:Card class="sapUiContentPadding" height="100%">
                            <f:content>
                                <VBox class="sapUiSmallMargin" height="100%" width="100%">
                                    <Image src="{view>ProductImage}" alt="{view>ProductName}" width="100%" height="10rem" class="sapUiSmallMarginBottom" />
                                    <core:HTML content="&lt;hr style='border-top: 1px solid #e0e0e0;'&gt;" />
                                    <Title text="{view>ProductName}" level="H3" wrapping="true" class="sapUiSmallMarginBottom" />
                                    <ObjectStatus text="{view>Category}" state="Success" class="sapUiTinyMarginBottom" />
                                    <Text text="{view>ProductDescription}" wrapping="true" class="sapUiSmallMarginBottom" maxLines="3" />
                                    <HBox justifyContent="SpaceBetween" class="sapUiSmallMarginBottom">
                                        <Text text="Unit Price" />
                                        <ObjectNumber number="{path: 'view>UnitPrice', type: 'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 }}" unit="{view>CurrencyCode}" state="Success" emphasized="true" />
                                    </HBox>
                                    <HBox justifyContent="SpaceBetween" class="sapUiSmallMarginBottom">
                                        <Text text="Per Each" />
                                        <Text text="{view>UnitOfMeasure}" />
                                    </HBox>
                                    <HBox justifyContent="SpaceBetween" class="sapUiSmallMarginBottom">
                                        <Text text="Code:" />
                                        <Text text="{view>CommodityCode}" />
                                    </HBox>
                                    <HBox justifyContent="SpaceBetween">
                                        <Text text="Part #:" />
                                        <Text text="{view>PartNumber}" />
                                    </HBox>
                                </VBox>
                            </f:content>
                        </f:Card>
                    </f:GridListItem>
                </f:GridList>
            </Panel>
        </content>
    </Page>
</mvc:View>