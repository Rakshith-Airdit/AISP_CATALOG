<mvc:View controllerName="com.catalog.aispcatalog.controller.Product"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout">
    <Page id="productPage" backgroundDesign="Solid" title="{productModel>/ProductName}">
        <!-- <customHeader>
            <Toolbar>
                <Button icon="sap-icon://nav-back" press=".onBack" tooltip="{i18n>backButtonTooltip}" />
                <ToolbarSpacer/>
                <Button icon="sap-icon://sys-cancel" press=".onCloseProduct" tooltip="{i18n>removeFromComparisonTooltip}" />
            </Toolbar>
        </customHeader> -->
        <content>
            <l:VerticalLayout class="sapUiContentPadding" width="100%">
                <HBox alignItems="Start" justifyContent="SpaceBetween" class="sapUiMediumMarginBottom sapUiTinyMarginTop">
                    <VBox width="60%" class="sapUiTinyMarginEnd">
                        <Image src="{productModel>/ProductImage}" alt="{i18n>comparisonAlternativeImageText}" densityAware="false" width="100%" visible="{= !!${productModel>/ProductImage}}">
                            <detailBox>
                                <LightBox>
                                    <imageContent>
                                        <LightBoxItem imageSrc="{productModel>/ProductImage}" title="{productModel>/ProductName}" />
                                    </imageContent>
                                </LightBox>
                            </detailBox>
                        </Image>
                        <!-- <VBox visible="{= !${productModel>/ProductImage}}" width="100%" height="150px" alignItems="Center" justifyContent="Center" class="sapUiSmallMarginBottom sapUiTinyMarginTop sapUiShadow">
                            <Avatar initials="{
                                path: 'productModel>/Category',
                                formatter: '.formatter.getCategoryInitials'
                            }" displaySize="XL" displayShape="Square" backgroundColor="Accent1" />
                        </VBox> -->
                    </VBox>

                    <VBox width="40%" class="sapUiMediumMarginBegin" alignItems="End" justifyContent="Start">
                        <ObjectNumber class="productPrice sapUiSmallMarginBottom" number="{productModel>/UnitPrice}" unit="{productModel>/CurrencyCode}" state="Success" emphasized="true" />
                        <ObjectStatus class="sapUiSmallMarginBottom" text="{
                                path: 'productModel>/Status',
                                formatter: '.formatter.statusText'
                            }" state="{
                                path: 'productModel>/Status',
                                formatter: '.formatter.statusState'
                            }" />
                    </VBox>
                </HBox>

                <l:VerticalLayout class="sapUiMediumMarginTopBottom" width="100%">
                    <HBox class="sapUiTinyMarginBottom">
                        <Label text="Category:" width="10rem" design="Bold"/>
                        <Text text="{productModel>/Category}" />
                    </HBox>
                    <HBox class="sapUiTinyMarginBottom">
                        <Label text="Commodity Code:" width="10rem" design="Bold"/>
                        <Text text="{productModel>/CommodityCode}" />
                    </HBox>
                    <HBox class="sapUiTinyMarginBottom">
                        <Label text="Part Number:" width="10rem" design="Bold"/>
                        <Text text="{productModel>/PartNumber}" />
                    </HBox>
                    <HBox class="sapUiTinyMarginBottom">
                        <Label text="Lead Time:" width="10rem" design="Bold"/>
                        <Text text="{productModel>/LeadTime} Days" />
                    </HBox>

                    <Label text="Description:" class="sapUiSmallMarginTopBottom" design="Bold"/>
                    <Text text="{productModel>/ProductDescription}" wrapping="true" class="sapUiSmallMarginBottom" />

                    <Label text="Additional Link:" class="sapUiSmallMarginTopBottom" design="Bold"/>
                    <Link text="{productModel>/AdditionalLink}" href="{productModel>/AdditionalLink}" target="_blank" />
                </l:VerticalLayout>

            </l:VerticalLayout>
        </content>
    </Page>
</mvc:View>